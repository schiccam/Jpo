<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


    <ImageView
        android:id="@+id/iv_Logo"
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_accueil"
        android:src="@drawable/logofdme"
        android:adjustViewBounds="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>


    <TextView
        android:id="@+id/tv_accueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toucher l'Ã©cran"
        app:layout_constraintTop_toBottomOf="@id/iv_Logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/button_admin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="admin_Click"
        android:src="@drawable/adminicon"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REST"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="REST_Clicked"
        android:visibility="gone"/>




</android.support.constraint.ConstraintLayout>